        <div class="basediv">

            <div class="navbar navbar-static-top navbar-inverse">
                <div  style="margin-left: 105px; margin-top: 10px;" class="navbar-brand">Recipe Box</div>
            </div>
            <div class="my-modal modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <!-- <h4 class="modal-title">Search for any Recipe</h4> -->
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <form class="recipeForm" action="/recipeSearch" method="POST">
