            <div class=recipeDiv>
                <!-- <p>max calories you need in meal, will tell you some cool recipe</p> -->
                <form class="caloriesForm" action="/caloriesMeal" method="POST">
                    <input type="text" name="caloriesSearch"
                        placeholder="Maximum Calories per Meal">
                    <button style="visibility: hidden;" type="submit">Search</button>
                </form>
            </div>

            <div class=recipeDiv>
                <!-- <p>Maximum number of calories you need in a day, get some great recipes for three meals a day with the
                    same number of calories you chose</p> -->
                <form class="caloriesDayForm" action="/caloriesForDay" method="POST">
                    <input type="text" name="caloriesDaySearch"
                        placeholder="Maximum Calories per Day">
                    <button style="visibility: hidden;" type="submit">Search</button>
                </form>
            </div>

            <div class=exclude>
                <!-- <p>Exclude the ingredient that causes you sensitivity OR YOu dont like it </p> -->
                <form class="execludeForm" action="/execlude" method="POST">
                    <input type="text" name="execludeItem"
                        placeholder="Exclude Ingredient">
                    <button style="visibility: hidden;" type="submit">Find</button>
                </form>
            </div>

            <div class=include>
                <!-- <p>Include the ingredient that You like it </p> -->
                <form class="includeForm" action="/include" method="POST">
                    <input type="text" name="includeItem" placeholder="Include Ingredient">
                    <button style="visibility: hidden;" type="submit">Find</button>
                </form>
            </div>
        </div>
