<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipes</title>
    <!-- favicon -->
    <link rel="icon" href="logoused.ico" type="image/x-icon">
    <!-- style -->
    <link rel="stylesheet" href="/styles/reset.css">
    <link rel="stylesheet" href="/styles/home.css">
   
    <link rel="stylesheet" href="/styles/recipeCard.css">
    
    <!-- font awesome -->
    <script src="https://kit.fontawesome.com/a24ea374e8.js" crossorigin="anonymous"></script>
    <!-- google font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
    
</head>
<body style="background-color: rgba(255, 206, 71, 0.445);">
  <%- include('../layout/header') %>
    <main style="height: 100%;margin-top: 70px; min-height: 600px; overflow: hidden;">
        <div id="resultPage" style="    display: flex;
        width: 80%;
        flex-wrap: wrap;
        justify-content: center;
        margin: 20px auto;
    ">
            <% savedList.forEach(element=>{ %>
                <div class="card-container">
            <div class="card u-clearfix">
                <img src="<%= element.image%>" alt="" class="card-media"/>
        
              <div class="card-body">
                <h2 class="card-title"> <%= element.label%></h2>
                <span class="card-description subtle"> <p class = "sumDes">ingredientLines: <%= element.ingredientlines%></p></span>
                <span class="card-description subtle"> <p>calories: <%= element.calories %></p></span>
                <span class="card-description subtle"> <p>fat: <%= element.fat %></p></span>
                <span class="card-description subtle"> <p>Carbs: <%= element.carbs %></p></span>
                <span class="card-description subtle"> <p>Protein: <%= element.protein %></p></span>
                <span class="card-description subtle"> <p>Cholesterol: <%= element.cholesterol %></p></span>

                <div id = "button_form">
                  <form style="display: inline-block;" action="/deleteRecipe/<%= element.label %>?_method=delete" method="post">
                    <button class="recipebtn">Delete</button>
                  </form>
                  <button class="updateBtn recipebtn" class="recipebtn">Update</button>
              </div>

              <div class="updateForm form-popup">
                <form action="/update/<%= element.label %>?_method=put" method="POST" class="form-container">
                  <fieldset>
                  <legend> Update Recipe </legend>
                  <input type="text" name="label" value=" <%= element.label%>">
                  <input type="text" name="calories" value="<%= element.calories%>">
                  <input type="text" name="fat" value="<%= element.fat%>">
                  <input type="text" name="carbs" value="<%= element.carbs%>">
                  <input type="text" name="protein" value="<%= element.protein%>">
                  <input type="text" name="cholesterol" value="<%= element.cholesterol%>">

                  <textarea name="ingredientLines" cols="30" rows="10"><%= element.ingredientlines%> </textarea>
                  <button class="btn">Update Recipe</button>
                </fieldset>
                </form>
              </div>
            </div>
            <div class="card-shadow"></div>
          </div>
        </div>

          <%}) %>
    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="./js/app.js"></script>
  <script>
    function openForm() {
      document.getElementById("myForm").style.display = "block";
    }
    
    function closeForm() {
      document.getElementById("myForm").style.display = "none";
    }
    </script>
    <%- include('../layout/footer') %>
</body>
</html>

